{
	"compilerOptions": {
		"target": "es5",
		"module": "ES2022",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*" // コンパイル対象のファイルを指定
	],
	"exclude": [
		"node_modules" // コンパイル対象から除外するディレクトリ
	]
}
